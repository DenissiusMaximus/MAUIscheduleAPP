<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ScheduleApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ScheduleApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <Shell.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="SetSchedule" />
    </Shell.ToolbarItems>

    <TabBar>
        <ShellContent
            Title="Тиждень 1"
            ContentTemplate="{DataTemplate views:WeekPage1}" />

        <ShellContent
            Title="Тиждень 2"
            ContentTemplate="{DataTemplate views:WeekPage2}" />
    </TabBar>

</Shell>
